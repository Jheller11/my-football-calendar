extends ./layout.pug

block content
    .add-favorite
        label(for='team') Add a new team:
        input.team-input(type='text' name='team' required)
        button.add-button
            i.fa.fa-plus
    .team-container
        div Favorites:
            ul.team-list
    .refresh-container
        button.refresh-button
            i.fa.fa-sync
            span   Reload Calendar
    .calendar-list

block scripts
    script(src='/scripts/calendar.js')